<% if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
          <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>        
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class: "btn btn-secondary" %>

<% else %>
<div class="card text-center">
  <div class="card-header">
    <h1>Friend App</h1>
  </div>
  <div class="card-body">
    <h5 class="card-title">A simple Friends List app</h5>
    <p class="card-text">This is a simple app made in Ruby on Rails with Bootstrap.</p>
    You don't have account? <%= link_to 'Sign up', new_user_registration_path %>
    <p> If you already have account here, then simply <%= link_to 'Log in', new_user_session_path %></p>
  </div>
  <div class="card-footer text-muted">
    <%= link_to 'Amir Drljevic', 'https://www.linkedin.com/in/amirdrljevic', target: :blank %>
  </div>
</div>



<% end %>